---
const { image, price, name, location, dorms, bathrooms, area } = Astro.props;
---

<div class="card flex border rounded-lg shadow-lg overflow-hidden mb-4">
  <!-- Left Column: Image -->
  <div class="w-1/3">
    <img src={image} alt={name} class="h-full w-full object-cover" />
  </div>

  <!-- Right Column: Content -->
  <div class="w-2/3 p-4 flex flex-col justify-between">
    <!-- Top Content -->
    <div>
      <p class="text-xl font-bold text-gray-900 mb-2">Precio desde ${price}</p>
      <h2 class="text-lg font-semibold text-gray-700">{name}</h2>
      <p class="text-sm text-gray-500 flex items-center">
        <i class="fas fa-map-marker-alt mr-2 text-gray-600"></i>{location}
      </p>
    </div>

    <!-- Property Details with Icons -->
    <div class="flex items-center justify-start text-gray-600 mt-4 pb-4 gap-4 border-b-2 border-gray-300">
      <div class="flex items-center">
        <i class="fas fa-bed mr-2"></i>
        <span>{dorms}</span>
      </div>
      <div class="flex items-center">
        <i class="fas fa-bath mr-2"></i>
        <span>{bathrooms}</span>
      </div>
      <div class="flex items-center">
        <i class="fas fa-ruler-combined mr-2"></i>
        <span>{area} m&sup2</span>
      </div>
    </div>

    <!-- Bottom Right Action -->
    <div class="flex justify-end mt-4">
      <button class="bg-sky-500 text-white px-2 py-2 rounded-lg hover:bg-gray-800 transition text-sm">Aplica Ya</button>
    </div>
  </div>
</div>